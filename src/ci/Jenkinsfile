pipeline {
    agent any
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                sh './cicd/scripts/build.sh'
            }
        }
        stage('Deliver') {
            steps {
                sh './cicd/scripts/delivery.sh'
            }
        }
    }

    post {
        always {
            echo 'Post pipeline'
        }
        success {
            echo 'Pipeline with a success'
        }
        failure {
            echo 'Pipelien failed'
        }
    }
}
